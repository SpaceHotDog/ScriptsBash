/* match pipeline */
var match = {
    $match: {
        "fechaLlamado": { "$gte" : ISODate("2018-08-01T00:00:00.000Z"),
        		  "$lte" : ISODate("2018-08-31T15:59:59.000Z")}}
},
/* group pipeline */
group = {
    $group: {
        idCamp : { $addToSet : "$idCampania"}, 
        _id : "$idUsuario",
        totalMinutos: { $sum: "$duracion" },
    }
};

db.getCollection('Llamados').aggregate([match, group]);
